#carbonads {
  display: block;
  overflow: hidden;
  padding-top: 10px;
  font-family: Verdana, "Helvetica Neue", Helvetica, sans-serif;
}

#carbonads span {
  display: block;
  overflow: hidden;
}

.carbon-text {
  display: block;
  text-align: left;
  font-size: 10px;
}

.carbon-img {
  display: block;
  margin: 0 auto 1em;
  text-align: center;
}

.carbon-poweredby {
  display: none !important;
}
