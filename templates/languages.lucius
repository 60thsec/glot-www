.language-badge {
    float: left;
    width: 100px;
    height: 140px;
    margin-left: 30px;
    margin-top: 30px;
}

.language-badge-icon {
    height: 80px;
    padding: 10px;
}

.language-badge-icon i {
    display: inline-block;
}

.language-badge-text.plaintext {
    margin-right: 10px;
}

.language-badge-text {
    margin-top: 42px;
    text-align: center;
}

.language-icon-large {
    font-size: 80px;
    color: #5c5c5c;
}

.language-badge-icon:hover {
    color: #337ab7;
}
